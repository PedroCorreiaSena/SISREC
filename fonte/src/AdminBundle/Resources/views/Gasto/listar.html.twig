{% extends "AdminBundle:Default:layout.html.twig" %}

{% block titulo %}
    Gastos da Cooperativa
    <a href="{{ path('admin_gasto_manter', {
        'idGastos': 0
    }) }}" type="submit" class="btn btn-primary">Cadastrar Gasto da Cooperativa</a>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-sm-12"><div class="panel-datatable-ctrls"></div></div>
                    </div>
                </div>
                <div class="table-responsive table-responsive-datatable">
                    <table class="table table-striped table-hover table-bordered" cellspacing="0" id="datatable">
                        <thead>
                        <tr>
                            <th>Tipo de Gasto</th>
                            <th class="text-center">Valor do gasto</th>
                            <th class="text-center">Quantidade</th>
                            <th class="text-center">Número da Compra</th>
                            <th class="text-center">Data do Gasto</th>
                            <th class="text-center">Valor total do gasto</th>
                            <th class="text-center">Ação</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for item in gasto %}
                            <tr>
                                <td>{{ item.idTpGasto.tpGasto }}</td>
                                <td>{{ item.vlGasto }}</td>
                                <td>{{ item.qtGasto }}</td>
                                <td>{{ item.numNotaFiscal }}</td>
                                <td>{{ item.dtGasto|date('d/m/Y') }}</td>
                                <td>{{ item.totalCompra }}</td>
                                <td class="text-center">
                                    <a href="{{ path('admin_gasto_manter', {
                                        'idGastos': item.idGastos
                                    }) }}" type="button" class="btn btn-default btn-xs">
                                        <span class="fa fa-edit"></span>
                                        Alterar Gasto da Cooperativa
                                    </a>
                                    <a href="{{ path('admin_gasto_excluir', {
                                        'idGastos': item.idGastos
                                    }) }}" type="button" class="btn btn-danger btn-xs">
                                        <span class="fa fa-trash"></span>
                                        Excluir Gasto da Cooperativa
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-sm-6"></div>
                        <div class="col-sm-6"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}