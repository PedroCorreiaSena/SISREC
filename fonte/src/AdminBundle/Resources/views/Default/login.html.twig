{% extends "AdminBundle:Default:layout.html.twig" %}

{% block content %}
    <form action="{{ path("admin_security_check") }}" class="form-signin" role="form" method="post">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default" style="margin-top: 25%">
                    <div class="panel-heading">
                        <img src="{{ asset("images/logo.png") }}" height="25" alt="">
                    </div>
                    <div class="panel-body">
                        {% if error %}
                            <div class="alert alert-danger" role="alert">
                                Login ou senha inválidos.
                                <!--{{ error.message }}-->
                            </div>
                        {% endif %}

                        {{ form_errors(form) }}

                        <div class="form-group">{{ form_widget(form._username) }}</div>
                        <div class="form-group">{{ form_widget(form._password) }}</div>
                        {{ form_row(form.btn_login) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 text-center" style="font-size: 12px; color: #ccc">
                <p>Deploy em {{ constant('AppBundle\\Utils\\ConstantUtil::DEPLOY_DATE') }}</p>
                <p>Revisão: {{ constant('AppBundle\\Utils\\ConstantUtil::DEPLOY_COMMIT') }}</p>
            </div>
        </div>
        {{ form_rest(form) }}
    </form>
{% endblock %}