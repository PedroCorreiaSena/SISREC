{% extends "AdminBundle:Default:layoutExterno.html.twig" %}
{% block content %}
    <form action="{{ path("admin_security_check") }}" class="form-signin" role="form" method="post">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default" style="margin-top: 25%">
                    <div class="panel-heading">
                        SISREC
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-sm-12">
                                {% if error %}
                                    <div class="alert alert-danger" role="alert">
                                        Usuário ou senha inválida
                                        <!--{{ error.message }}-->
                                    </div>
                                {% endif %}

                                {{ form_errors(form) }}

                                <div class="form-group">{{ form_widget(form._username) }}</div>
                                <div class="form-group">{{ form_widget(form._password) }}</div>
                                <div class="form-group">{{ form_row(form.btn_login) }}</div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <a href="{{ path('admin_solicitaracesso') }}">Solicitar Acesso</a>
                            </div>
                            <div class="col-sm-6 text-right">
                                <a href="{{ path('admin_recuperarsenha') }}">Recuperar Senha</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{ form_rest(form) }}
    </form>
    <script type="text/javascript">
        $('#login__username').mask('999.999.999-99');
    </script>
{% endblock %}