{% extends "AdminBundle:Default:layout.html.twig" %}

{% block titulo %}
    Tipo de Gasto
    <a href="{{ path('admin_tipogasto_manter', {
        'idTpGasto': 0
    }) }}" type="submit" class="btn btn-primary">Cadastrar Tipo de Gasto</a>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-sm-12"><div class="panel-datatable-ctrls"></div></div>
                    </div>
                </div>
                <div class="table-responsive table-responsive-datatable">
                    <table class="table table-striped table-hover table-bordered" cellspacing="0" id="datatable">
                        <thead>
                        <tr>
                            <th>Tipo de Gasto</th>
                            <th class="text-center">Situação</th>
                            <th class="text-center">Ação</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for item in tipoGasto %}
                            <tr>
                                <td>{{ item.tpGasto }}</td>
                                <td class="text-center">
                                    {% if item.stTpGasto %}
                                        <span class="fa fa-circle icon-st-verde"></span>
                                    {% else %}
                                        <span class="fa fa-circle icon-st-vermelho"></span>
                                    {% endif %}
                                </td>
                                <td class="text-center">
                                    <a href="{{ path('admin_tipogasto_manter', {
                                        'idTpGasto': item.idTpGasto
                                    }) }}" type="button" class="btn btn-default btn-xs">
                                        <span class="fa fa-edit"></span>
                                        Alterar Tipo de Gasto
                                    </a>
                                    <a href="{{ path('admin_tipogasto_excluir', {
                                        'idTpGasto': item.idTpGasto
                                    }) }}" type="button" class="btn btn-danger btn-xs">
                                        <span class="fa fa-trash"></span>
                                        Excluir Tipo de Gasto
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-sm-6"></div>
                        <div class="col-sm-6"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}