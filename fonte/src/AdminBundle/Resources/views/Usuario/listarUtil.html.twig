<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-sm-12"><div class="panel-datatable-ctrls"></div></div>
                </div>
            </div>
            <div class="table-responsive table-responsive-datatable">
                <table class="table table-striped table-hover table-bordered" cellspacing="0" id="datatable">
                    <thead>
                    <tr>
                        <th>CPF</th>
                        <th>Nome</th>
                        <th>E-mail</th>
                        <th class="text-center">Status</th>
                        <th class="text-center">Ação</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in usuario %}
                        <tr>
                            <td>{{ item.cpf }}</td>
                            <td>{{ item.nmUsuario }}</td>
                            <td>{{ item.email }}</td>
                            <td class="text-center">
                                {% if item.stUsuario %}
                                    <span class="fa fa-circle icon-st-verde"></span>
                                {% else %}
                                    <span class="fa fa-circle icon-st-vermelho"></span>
                                {% endif %}
                            </td>
                            <td class="text-center">
                                <a href="{{ path('admin_usuario_manter', {
                                    'idUsuario': item.idUsuario
                                }) }}" type="button" class="btn btn-default btn-xs">
                                    <span class="fa fa-eye"></span>
                                    Visualizar Usuário
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-sm-6"></div>
                    <div class="col-sm-6"></div>
                </div>
            </div>
        </div>
    </div>
</div>