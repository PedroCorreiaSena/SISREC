{% extends "AdminBundle:Default:layout.html.twig" %}

{% block titulo %}
    Material Reciclável
    <a href="{{ path('admin_material_manter', {
        'idMaterial': 0
    }) }}" type="submit" class="btn btn-primary">Cadastrar Material de Reciclagem</a>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-sm-12"><div class="panel-datatable-ctrls"></div></div>
                    </div>
                </div>
                <div class="table-responsive table-responsive-datatable">
                    <table class="table table-striped table-hover table-bordered" cellspacing="0" id="datatable">
                        <thead>
                        <tr>
                            <th>Tipo de Material</th>
                            <th class="text-center">Quantidade de material</th>
                            <th class="text-center">Data da Inclusão</th>
                            <th class="text-center">Total</th>
                            <th class="text-center">Ação</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for item in material %}
                            <tr>
                                <td>{{ item.idTpMaterial.tpMaterial }}</td>
                                <td class="text-center">{{ item.qtMaterial }}</td>
                                <td class="text-center">{{ item.dtInclusao|date('d/m/Y') }}</td>
                                <td class="text-center">{{ item.totalMaterial }}</td>
                                <td class="text-center">
                                    <a href="{{ path('admin_material_manter', {
                                        'idMaterial': item.idMaterial
                                    }) }}" type="button" class="btn btn-default btn-xs">
                                        <span class="fa fa-edit"></span>
                                        Alterar Material de Reciclagem
                                    </a>
                                    <a href="{{ path('admin_material_excluir', {
                                        'idMaterial': item.idMaterial
                                    }) }}" type="button" class="btn btn-danger btn-xs">
                                        <span class="fa fa-trash"></span>
                                        Excluir Material de Reciclagem
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-sm-6"></div>
                        <div class="col-sm-6"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}